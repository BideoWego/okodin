

<header class="page-header">
  <h1>Users</h1>
  <a href="{{ newUserPath }}" class="btn btn-primary">+ New User</a>
</header>


{{#if users.length }}
  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Username</th>
        <th>Email</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each users as |user| }}
      <tr>
        <td>{{ user.id }}</td>
        <td>
          <a href="{{ userPath user.id }}">{{ user.username }}</a>
        </td>
        <td>
          <a href="{{ userPath user.id }}">{{ user.email }}</a>
        </td>
        <td>
          <a href="{{ editUserPath user.id }}">Edit</a>
        </td>
        <td>
          <a href="{{ destroyUserPath user.id }}" class="text-danger">Delete</a>
        </td>
      </tr>
      {{/each }}
    </tbody>
  </table>
{{else }}
  <p class="text-danger">No users</p>
{{/if }}











