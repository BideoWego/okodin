

<header class="page-header">
  <h1>New User</h1>
</header>


<form action="{{ usersPath }}" method="post">
  <div class="form-group">
    <label for="user_username">Username</label>
    <input type="text" class="form-control" name="user[username]" id="user_username">
  </div>
  <div class="form-group">
    <label for="user_email">Email</label>
    <input type="text" class="form-control" name="user[email]" id="user_email">
  </div>


  <div class="form-group">
    <input type="submit" class="btn btn-primary">
  </div>
</form>











